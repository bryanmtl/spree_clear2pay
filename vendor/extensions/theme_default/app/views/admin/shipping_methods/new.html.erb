<%= render :partial => 'admin/shared/configuration_menu' %>

<% hook :admin_shipping_method_new_form_header do %>
  <h1><%= t("new_shipping_method") %></h1>

  <%= error_messages_for :shipping_method %>
<% end %>

<% hook :admin_shipping_method_new_form do %>
  <% form_for(:shipping_method, :url => collection_url) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>

    <% hook :admin_shipping_method_new_form_buttons do %>
      <p class="form-buttons">
        <%= button t("create") %> <%= t("or") %> <%= link_to t("cancel"), admin_shipping_methods_path %>
      </p>
    <% end %>
  <% end %>
<% end %>